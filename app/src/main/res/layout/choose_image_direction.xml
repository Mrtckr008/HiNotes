<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/choose_event_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#88000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/events_frame_view"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/border_image"
        app:layout_constraintBottom_toTopOf="@+id/choose_image_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/choose_image_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border_image"
        android:text="Cancel"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/choose_take_picture_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@+id/events_diveder_view"
        app:layout_constraintStart_toStartOf="@+id/events_frame_view"
        app:layout_constraintTop_toTopOf="@+id/events_frame_view"
        app:srcCompat="@drawable/camera_icon" />

    <ImageView
        android:id="@+id/choose_pick_image_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/events_frame_view"
        app:layout_constraintStart_toStartOf="@+id/events_frame_view"
        app:srcCompat="@drawable/gallery_icon" />

    <TextView
        android:id="@+id/choose_pick_image_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Pick Image"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/events_frame_view"
        app:layout_constraintEnd_toEndOf="@+id/events_frame_view"
        app:layout_constraintStart_toStartOf="@+id/events_frame_view"
        app:layout_constraintTop_toBottomOf="@+id/choose_take_picture_text" />

    <TextView
        android:id="@+id/choose_take_picture_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="Take Picture"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/events_diveder_view"
        app:layout_constraintEnd_toEndOf="@+id/events_frame_view"
        app:layout_constraintStart_toStartOf="@+id/events_frame_view"
        app:layout_constraintTop_toTopOf="@+id/events_frame_view" />

    <View
        android:id="@+id/events_diveder_view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#AFAFAF"
        app:layout_constraintBottom_toBottomOf="@+id/events_frame_view"
        app:layout_constraintEnd_toEndOf="@+id/events_frame_view"
        app:layout_constraintStart_toStartOf="@+id/events_frame_view"
        app:layout_constraintTop_toTopOf="@+id/events_frame_view" />
</androidx.constraintlayout.widget.ConstraintLayout>